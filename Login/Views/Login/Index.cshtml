@using Login.Models.Entity;
@model Tbl_Kullanici

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

@*GİRİŞ EKRANI*@

<title>Hemen Giriş Yap!</title>


<div class="main">
    <section class="signup">
        <div class="container">
            <div class="signup-content">

                <h2 class="form-title">HEMEN GİRİŞ YAP!</h2>
                @ViewBag.Mesaj
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        <input type="email" class="form-input" name="Email" id="email" placeholder="E-mailiniz" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-input" name="KullaniciSifre" id="password" placeholder="Şifreniz" />
                        <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Giriş Yap" />
                    </div>
                    <p class="loginhere">
                        Hala Üye Değil misin ? <a href="/Kayit/Index/" class="loginhere-link">Kayıt Ol</a>
                    </p>

                }

            </div>
        </div>

    </section>

</div>