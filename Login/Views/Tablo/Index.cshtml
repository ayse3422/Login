@model List<Login.Models.EntityTabloData>
@{
    Layout = null;
}

@*TABLOLAR*@

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>İş Takibi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

</head>
<body style="background:url('../../AddProject/images/back5.jpg');background-attachment: fixed;background-size: 100% 100%;background-repeat: no-repeat">
    <section id="one" class="wrapper style2">

        <div class="inner">
            <div class="container-fluid">
                <h2 style="text-align:center;margin-top:20px;margin-bottom:20px">İŞ TAKİBİ</h2>
                
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-12">
                        <div id="ui">
                            <table class="table table-bordered">
                                <thead>
                                    <tr style="text-align:center" class="table-success">
                                        <th>KartId</th>
                                        <th>TARİH</th>
                                        <th>DURUM</th>
                                        <th>YAPILACAK İŞ</th>
                                        <th>AÇIKLAMA</th>
                                        <th>SİL</th>
                                        <th>GÜNCELLE</th>

                                    </tr>
                                </thead>
                                
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                       
                                        <tr style="text-align:center" class="table table-warning">
                                            <td>@item.KartId</td>
                                            <td style="word-break:break-all">@item.Tarih</td>
                                            <td style="word-break:break-all">@item.Durum</td>
                                            <td style="word-break:break-all">@item.İs</td>
                                            <td style="word-break:break-all">@item.Aciklama</td>
                                            <td><a href="/Tablo/TabloSilme/@item.KartId"/><button type="button" class="btn btn-warning">SİL</button></td>
                                            <td><a href="/Tablo/TabloGuncelle/@item.KartId"/><button type="button" class="btn btn-success">GÜNCELLE</button></td>

                                        </tr>

                                    }
                                </tbody>

                            </table>
                            <div class="row">
                                <a href="/Tablo/TabloEkle/" /><button style="background-color: #74b9ff;margin-bottom:20px;color:white;margin-left:20px" type="button" class="btn ">Yeni iş oluştur</button>
                                <a href="/Kart/Index/" /><button style="background-color: #74b9ff;margin-bottom:20px;color:white;margin-left:10px" type="button" class="btn ">Kaydet</button>
                                
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>