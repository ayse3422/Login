
@{
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<title>Tablo Oluştur</title>

<div class="main">

    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <form method="post" action="@Url.Action("TabloEkle", "Tablo")" id="signup-form" class="signup-form">
                    <h2 class="form-title">İŞ EKLE!</h2>
                    <div class="form-group">
                        <input type="date" class="form-control" name="Tarih" id="name" placeholder="Tarihinizi Giriniz." />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="Durum" placeholder="Durumunuzu Giriniz."></textarea>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="İs" placeholder="İşinizi Giriniz."></textarea>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="Aciklama" placeholder="Açıklamanızı Giriniz."></textarea>
                    </div>
                   
                    <div class="form-group">
                        <button type="submit" class="form-control">Yeni İş Ekle</button>
                    </div>
                </form>
                
            </div>
        </div>
    </section>

</div>

